val greetStrings = new Array[String](3)
greetStrings(0) = "Hello"
greetStrings(1) = "\t"
greetStrings(2) = "world!"

for (i <- 0 to 2)
	println(greetStrings(i))

val sums = new Array[Int](100)

var ii = 0
var total = 0
for (i <- 0 to 99) {
	println(i)
	sums(i) = i
}
	

println("-----------------")

var t = 0

for (i <- 0 to 99) {
	t += sums(i)
}


println(t)


val gs = new Array[String](3)
gs.update(0, "Hello")
gs.update(1, ", ")
gs.update(2, "world!")

for (i <- 0 to 2)
	println(gs.apply(i))

